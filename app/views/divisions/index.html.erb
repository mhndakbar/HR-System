<p style="color: green"><%= notice %></p>

<h1>Divisions</h1>

<div class="btn btn-info newbtn">
<%= link_to "New division", new_division_path %>
</div>

<br>
<br>
<div id="divisions">
<table class="table table-striped">
<thead class="thead-dark">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Teams</th>
    <th>Manager</th>
    <th>Action</th>
  </tr>
<tbody>

  <% @divisions.each do |division| %>
  <tr>
    <td><%= division.id%></td>
    <td><%= division.name%></td>
    <td><%= division.description%></td>
    <% if division.team.count > 0 %>
     <td>
        <% division.team.each do |team| %>
              <%= team.name  %><span>, </span>
        <% end %> 
      </td>
    <%end%> 
    <% if division.employee.present? %>
      <td><%= division.employee.name%></td>
    <%end%>  
    <td class="actions">
      <%= link_to "Edit", edit_division_path(division) %> 
      <%= button_to "Delete", division, method: :delete %>
    </td>
  </tr>
  <% end %>
    </thead>
  </table>
</div>


<br>
<div class="btn">
<%= link_to "Back to home", "/" %>
</div>