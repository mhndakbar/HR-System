<div id="<%= dom_id employee %>">
  <p>
    <strong>Name:</strong>
    <%= employee.name %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= employee.email %>
  </p>

  <p>
    <strong>Job:</strong>
    <%= employee.job %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= employee.salary %>
  </p>

  <p>
    <strong>Employment status:</strong>
    <%= employee.employment_status %>
  </p>

  <p>
  <% if employee.team.present? %>
      <strong>Team:</strong>
      <%= employee.team.name %>
    <% end %>
  </p>

  <p>
  <% if employee.division.present? %>
      <strong>Division:</strong>
      <%= employee.division.name %>
    <% end %>
  </p>

</div>
