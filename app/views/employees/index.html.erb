<p style="color: green"><%= notice %></p>

<h1>Employees</h1>

<div class="btn btn-info newbtn">
<%= link_to "New employee", new_employee_path %>
</div>

<br>
<br>
<div id="employees">
<table class="table table-striped">
<thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Job</th>
    <th>Salary</th>
    <th>Team</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
<tbody>

  <% @employees.each do |employee| %>
  <tr>
    <td><%= employee.id%></td>
    <td><%= employee.name%></td>
    <td><%= employee.email%></td>
    <td><%= employee.job%></td>
    <td><%= employee.salary%></td>
    <% if employee.team.present? == true %>
     <td><%= employee.team.name %></td>
    <% end %>
    <% if employee.team.present? == false %>
     <td><%=  %></td>
    <% end %>
    <td><%= employee.employment_status %></td>
    <td class="actions">
      <%= link_to "Edit", edit_employee_path(employee) %> 
      <%= button_to "Delete", employee, method: :delete %>
    </td>
  </tr>
  <% end %>
    </thead>
  </table>
</div>
<br>


<br>
<div class="btn">
<%= link_to "Back to home", "/" %>
</div>
